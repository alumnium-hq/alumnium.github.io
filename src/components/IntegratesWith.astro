---
import Logo from "./Logo.astro";
import openaiLockup from "../assets/openai-lockup.svg";
import anthropic from "../assets/anthropic.svg";
import gemini from "../assets/gemini.svg";
import azure from "../assets/azure.svg";
import aws from "../assets/aws.svg";
---

<div class="light:bg-primary-light dark:bg-primary-dark py-8 not-content">
  <div class="mx-auto max-w-7xl">
    <h2 class="text-center text-lg/8 font-semibold light:text-text-light dark:text-text-dark">Integrates with</h2>
    <div class="mx-auto mt-10 grid max-w-none grid-cols-2 items-center gap-x-10 gap-y-10 lg:grid-cols-5">
      <Logo src={openaiLockup.src} alt="OpenAI" />
      <Logo src={anthropic.src} alt="Anthropic" />
      <Logo src={gemini.src} alt="Google Gemini" className="top-[-10px] relative" />
      <Logo src={azure.src} alt="Microsoft Azure" />
      <Logo src={aws.src} alt="AWS" />
    </div>
  </div>
</div>
